<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="Service" packages="">


    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p (%F:%L) [%t] - %m%n"/>
        </Console>


        <RollingFile name="RollingFile" fileName="logs/heliopausa-services.log"
                     filePattern="logs/heliopausa-services-$${date:yyyy-MM}/service-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %-5p (%F:%L) [%t] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>


    <Loggers>
        <Root level="trace">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>
</Configuration>